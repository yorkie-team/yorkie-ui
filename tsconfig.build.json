{
    "extends": "./tsconfig.base.json",
    "include": ["src/**/*.ts", "src/**/*.tsx", "./styled-system/**/*.{js,jsx,ts,tsx}"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test-d.ts", "src/stories", "src/**/**/**/*.stories.tsx"],
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "composite": true,
      "outDir": "./dist/esm",
      "rootDir": "src",
      "declarationDir": "./dist/types",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@/styled/*": ["./styled-system/*"],
        "@/components/*": ["./src/components/*"],
        "@/stories/*": ["./src/stories/*"],
        "@/lib/*": ["./src/lib/*"]
      }
    }
  }