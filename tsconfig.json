{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "styled-system",
  ]
}
