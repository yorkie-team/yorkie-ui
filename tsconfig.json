{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/styled/*": ["./styled-system/*"],
      "@/components/*": ["./src/components/*"],
      "@/stories/*": ["./src/stories/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "styled-system",
  ]
}
