{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitReturns": true, // Requires all function paths to return a value
    "noImplicitThis": true, // Disallows 'this' expressions with an implicit any type
    "strictNullChecks": true, // Null checks are strict
    "strictFunctionTypes": true, // Function types have strict checking
    "strictPropertyInitialization": true, // Requires all class properties to be initialized
    "strictBindCallApply": true, // Ensures correct 'bind', 'call', and 'apply' methods usage
    "noUncheckedIndexedAccess": true, // Prevents property access errors on 'null' or 'undefined' values
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/styled/*": ["./styled-system/*"],
      "@/components/*": ["./src/components/*"],
      "@/stories/*": ["./src/stories/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/styles/*": ["./src/styles/*"]
    }
  },
  "typeRoots": ["./node_modules/@types"],
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
