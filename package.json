{
  "name": "yorkie-ui",
  "version": "0.4.3",
  "description": "Yorkie UI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yorkie-team/yorkie-ui.git"
  },
  "homepage": "https://yorkie.dev/yorkie-ui",
  "keywords": [
    "design-system",
    "components",
    "ui-library",
    "component",
    "framework",
    "theming",
    "design",
    "css",
    "ui"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test-alias": "tsc-alias --verbose",
    "build": "pnpm run clean && pnpm panda codegen && pnpm run copy:styled-system && pnpm run build:panda && pnpm run build:esm && pnpm run test-alias",
    "build:esm": "tsc -b tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "build:panda": "mkdir -p dist/styles && panda cssgen --outfile dist/styles/globals.css",
    "copy:styled-system": "copyfiles ./styled-system/**/*.{d.ts,js} ./styled-system/*.{d.ts,js} dist/",
    "dev": "next dev",
    "clean": "rm -rf dist tsconfig.tsbuildinfo actions chains connectors query",
    "start": "next start",
    "lint": "next lint --fix && stylelint --fix \"src/**/*.{css,scss}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "style": "panda codegen",
    "sync-figma-to-tokens": "ts-node-esm -P tsconfig.json tokens/sync_figma_to_tokens.ts"
  },
  "dependencies": {
    "@ark-ui/react": "^2.2.3",
    "@pandacss/dev": "^0.36.1",
    "@park-ui/panda-preset": "^0.36.1",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@typescript-eslint/parser": "^7.2.0",
    "classnames": "^2.5.1",
    "copyfiles": "^2.4.1",
    "i": "^0.3.7",
    "next": "14.1.0",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "^0.2.1",
    "npm": "^10.5.0",
    "panda": "^0.6.5",
    "pnpm": "^8.15.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.8"
  },
  "devDependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.1.3",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.0.0",
    "@storybook/addon-styling-webpack": "^0.0.6",
    "@storybook/addon-themes": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/nextjs": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@storybook/test-runner": "^0.17.0",
    "@types/mdx": "^2.0.11",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "gh-pages": "^6.1.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "storybook": "^8.0.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.2.0"
  },
  "lint-staged": {
    "*/**/*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}
